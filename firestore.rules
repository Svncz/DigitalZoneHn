rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Reglas para Productos (Products)
    match /products/{document=**} {
      allow read: if true; // Public can see products
      allow write: if isAuthenticated(); // Only admin can edit
    }

    // Reglas para Combos
    match /combos/{document=**} {
      allow read: if true; // Public can see combos
      allow write: if isAuthenticated(); // Only admin can edit
    }

    // Reglas para Opiniones
    match /OPINIONES/{opinionId} {
      allow read: if true; // Public can see opinions
      allow create: if true; // Public can add opinions
      allow update, delete: if isAuthenticated(); // Only admin can start/delete
    }

    // Reglas para Ordenes (Orders)
    match /orders/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Reglas para Configuraci√≥n (Banner, Anuncios)
    match /config/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Fallback for any other collections: Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
